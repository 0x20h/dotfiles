#/bin/sh

cd $(dirname $0)


# vim stuff
cp vimrc ~/.vimrc

if [ -f private-vimrc ]; then
	# append private settings, place a private-vimrc in this directory
	cat private-vimrc >> ~/.vimrc
fi

rm -rf ~/.vim/*
cp -r vim/* ~/.vim

# tmux
cp tmux.conf ~/.tmux.conf

# copy diff scripts
if [ ! -d ~/bin ]; then
	mkdir ~/bin
fi

cp bin/* ~/bin

# copy custom bash
cp bash_custom ~/.bash_custom

grep -q ".bash_custom" ~/.bashrc

if [ $? -ne 0 ]; then
	echo "adding bash_custom entry to your .bashrc"
	echo "if [ -f ~/.bash_custom ]; then . ~/.bash_custom; fi" >> ~/.bashrc
fi

echo "Add to your .gitconfig for vimdiff"
echo "
[diff]
   external = git_diff_wrapper
[pager]
    diff =
"
