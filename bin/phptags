#!/bin/sh
# shamelessly taken from http://www.mwop.net/blog/134-exuberant-ctags-with-PHP-in-Vim.html
# thank you matthew !
ctags-exuberant -h ".php" -R \
	--exclude="\.svn" \
	--langmap=PHP:.php.ctp,JavaScript:.js \
	--tag-relative=yes \
	--PHP-kinds=+cf \
	--regex-PHP="/abstract class ([^ ]*)/\1/c/" \
	--regex-PHP="/interface ([^ ]*)/\1/c/" \
	--regex-PHP="/(public |static |abstract |protected |private )+function ([^ (]*)/\2/f/" \
	$@
