#!/bin/sh
info "emmet-vim..."

depends() {
	echo "git vim"
}

install() {
	cd $BASE/git

	if [ ! -d $BASE/git/emmet-vim ]; then
		git clone https://github.com/mattn/emmet-vim.git
		cd $BASE/dotfiles/vim/bundle
		ln -sf $BASE/git/emmet-vim
	else
		cd $BASE/git/emmet-vim;
		git pull origin master
	fi
}
